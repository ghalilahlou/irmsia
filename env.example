# ============================================
# IRMSIA Medical AI - Configuration
# ============================================
# Copiez ce fichier vers .env et modifiez les valeurs

# Application
DEBUG=true
SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars
ENCRYPTION_KEY=change-this-to-64-hex-characters-for-32-bytes-aes-256

# CORS
ALLOWED_HOSTS=["http://localhost:3000","http://localhost:8000"]

# Storage
UPLOAD_DIR=./storage/uploads
ENCRYPTED_DIR=./storage/encrypted
PNG_DIR=./storage/png
MAX_UPLOAD_SIZE=104857600

# AI Configuration
AI_PROVIDER=mock
# Options: mock, huggingface, openai

# Hugging Face
HUGGINGFACE_MODEL=microsoft/git-base

# OpenAI (si AI_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-vision-preview

# Blockchain
BLOCKCHAIN_TYPE=mock
# Options: mock, ipfs, fabric

# IPFS (si BLOCKCHAIN_TYPE=ipfs)
IPFS_HOST=127.0.0.1
IPFS_PORT=5001

# Ethereum (optionnel, pour smart contracts)
ETHEREUM_RPC_URL=
CONTRACT_ADDRESS=
PRIVATE_KEY=

# Hyperledger Fabric (si BLOCKCHAIN_TYPE=fabric)
FABRIC_NETWORK_CONFIG=
FABRIC_CHANNEL_NAME=mychannel
FABRIC_CHAINCODE_NAME=medical-chaincode

# Database
DATABASE_URL=sqlite:///./medical_audit.db
# Pour PostgreSQL: postgresql://user:password@localhost/medical_audit

# S3 (Production)
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/irmsia.log

# Docker / gRPC Configuration (pour d√©ploiement Docker)
GRPC_DL_HOST=grpc-server
GRPC_DL_PORT=50051
NEXT_PUBLIC_API_URL=http://localhost:8000

